pipeline {
    agent any

    stages {
        stage('Run Docker Container') {
            steps {
                script {
                    // Run the container in detached mode mapping ports or volumes as needed
                  //  sh 'docker run -d --name my-running-app -p 8080:8080 yourdockeruser/yourapp:latest'
                    sh 'docker run -p 8070:8090 -e SPRING_DATA_MONGODB_URI=mongodb://host.docker.internal:27017/yourdbname  spring-boot-microservice'
                }
            }
        }

       

      
    }
}
